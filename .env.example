# DB SETUP

DB_USERNAME=postgres
DB_PASSWORD=root
DB_NAME=ecommerce_db

# JWT SETUP

JWT_SECRET=TEST
JWT_REFRESH_SECRET=TEST  # optional (strategy falls back to JWT_SECRET)
REFRESH_TOKEN_COOKIE_NAME=refreshToken

# COOKIES SETUP

CSRF_COOKIE_NAME=XSRF-TOKEN
COOKIE_SECURE=true  # set false in local dev if not HTTPS

# REDIS SETUP

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=root

# ================================
# AI Generator Service Configuration
# ================================

# Provider Selection (hf, openai)
AI_PROVIDER=hf

# Rate Limiting
AI_RATE_CAPACITY=30
AI_RATE_REFILL_PER_SEC=0.5
AI_RATE_BURST_SIZE=10

# ================================
# HuggingFace Configuration
# ================================
HF_API_KEY=_________________
HF_DEFAULT_MODEL=microsoft/DialoGPT-medium
HF_TIMEOUT=120000
HF_MAX_RETRIES=3

# ================================
# OpenAI Configuration
# ================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_DEFAULT_MODEL=gpt-3.5-turbo
OPENAI_TIMEOUT=60000
OPENAI_MAX_RETRIES=3

# ================================
# Encryption Keys for Audit
# ================================
AI_AUDIT_ENC_KEY=your-32-byte-encryption-key-here-change-in-production
AI_AUDIT_ENC_KEY_SECONDARY=backup-key-for-rotation-optional

# ================================
# Email Service Configuration
# ================================

# Provider Selection (sendgrid, smtp)
EMAIL_PROVIDER=smtp

# SendGrid Configuration
SENDGRID_API_KEY=_____________________
SENDGRID_FROM_EMAIL=service@swift-ecommerce.com
SENDGRID_FROM_NAME='Swift Ecommerce'

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=_______________
SMTP_PASSWORD='_________________'
SMTP_FROM_EMAIL=service@swift-ecommerce.com
SMTP_FROM_NAME='Swift Ecommerce'

# SMTP Pool Configuration
SMTP_POOL_SIZE=5
SMTP_MAX_MESSAGES=100

# Template Configuration
EMAIL_TEMPLATE_ENGINE=handlebars
EMAIL_TEMPLATE_DIR=src/modules/email/templates/handlebars
EMAIL_BASE_URL=https://yourstore.com
EMAIL_LOGO_URL=https://yourstore.com/logo.png

# Development Preview
EMAIL_PREVIEW=true
