FROM node:18-alpine

# Install dependencies for native modules
RUN apk add --no-cache python3 g++ make

# Create app directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Build the application
RUN npm run build

# Run tests by default
CMD ["npm", "run", "test:e2e"]
